	/**
	 * 第三方平台订单保存接口（明文）
	 * 
	 * @param queryPaymentPlatFormMessage
	 * @return
	 */
	@RequestMapping(value = "initOrder4PlatForm", produces = "application/json;charset=UTF-8", method = RequestMethod.POST)
	@ResponseBody
	public String initOrder4PlatForm(HttpServletRequest request, HttpServletResponse response, @RequestBody String orderMessage) {
		if (Boolean.valueOf(ValidateUtil.getConfigValue("checkIPflag")) && !isValidIp(request)) {
			logger.info("initOrder4PlatForm-invalid access:" + getClientIP(request));
			return "invalid access !";
		}
		OrderDetail4ActionModel orderModel = JSON.parseObject(orderMessage, OrderDetail4ActionModel.class);
		LogUtil.info("第三方平台订单保存接口（明文）==开始==initOrder4PlatForm==appid=" + orderModel.getAppId() + "=apporderid=" + orderModel.getAppOrderId() + "="
				+ orderMessage);
		PaymentPlatformsModel initData = paymentService.initAllPayments(request, response, orderModel);
		Map<String, Object> resultMap = new HashMap<String, Object>();
		resultMap.put("paymentId", initData.getPaymentId());
		resultMap.put("appOrderid", initData.getAppOrderid());
		resultMap.put("status", initData.getStatus());
		resultMap.put("msg", initData.getMessage());
		resultMap.put("payUrl", initData.getPayUrl());
		resultMap.put("brandWCPayRequestParams", initData.getBrandWCPayRequestParams());
		resultMap.put("appWCPayRequestParams", initData.getAppWCPayRequestParams());
		net.sf.json.JSONObject jsonPayObject = net.sf.json.JSONObject.fromObject(resultMap);
		LogUtil.info("第三方平台订单保存接口（明文）==结束==initOrder4PlatForm==appid=" + orderModel.getAppId() + "=apporderid=" + orderModel.getAppOrderId() + "="
				+ jsonPayObject.toString());
		return jsonPayObject.toString();
	}

