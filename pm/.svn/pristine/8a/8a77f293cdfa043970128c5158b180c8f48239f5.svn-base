<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
               http://www.springframework.org/schema/security   
               http://www.springframework.org/schema/security/spring-security-4.0.xsd
               ">

	<security:http security="none" pattern="/static/**" />
	<security:http security="none" pattern="/upload/**" />
	<security:http security="none" pattern="/app/**" />
	<security:http security="none" pattern="/validateCodeImg/**" />
	<security:http security="none" pattern="/favicon.ico" />
	<security:http security="none" pattern="/online/**" />
	<security:http security="none" pattern="/risk/*4Cif" />
	<security:http security="none" pattern="/provider/*4Cif" />
	<security:http security="none" pattern="/workflow/*" />
	<security:http security="none" pattern="/interface/**" />
	<security:http security="none" pattern="/payment/**" />
	<security:http security="none" pattern="/bindpayment/**" />
	<security:http security="none" pattern="/withholding/**" />
	<security:http security="none" pattern="/recon/**" />
	<security:http security="none" pattern="/druid/**" />
	<security:http security="none" pattern="/payment/initOrder"/>
	<security:http>
		<security:intercept-url pattern="/**"
			access="hasRole('ROLE_USER')" />

		<security:form-login login-page="/auth/sign"
			authentication-failure-url="/auth/sign?error"
			authentication-success-handler-ref="authSuccess" />
		<security:logout logout-url="/auth/logout"
			invalidate-session="true" logout-success-url="/auth/sign?logout" />
		<security:access-denied-handler
			error-page="/auth/denied" />

		<security:session-management
			invalid-session-url="/auth/login?same" session-fixation-protection="changeSessionId">
			<security:concurrency-control
				max-sessions="1" expired-url="/auth/same" />
		</security:session-management>

		<security:custom-filter ref="defaultFilter"
			before="FILTER_SECURITY_INTERCEPTOR" />

		<security:csrf disabled="true" />

		<security:headers>
			<security:frame-options policy="SAMEORIGIN" />
		</security:headers>
	</security:http>
	<bean id="authSuccess"
		class="com.cninsure.system.security.SecurityAuthenticationSuccessHandlerImpl"></bean>

	<!-- 认证管理器，使用自定义的UserDetailsService，并对密码采用md5加密 -->
	<security:authentication-manager alias="authenticationManager">
		<security:authentication-provider
			user-service-ref="userService">
			<security:password-encoder ref="passwordEncoder" />
		</security:authentication-provider>
	</security:authentication-manager>
	<bean id="userService" class="com.cninsure.system.security.SecurityValidationService" />
	<bean id="passwordEncoder" class="com.cninsure.system.security.SecurityPasswordEncoder" />

	<!-- 请求认证过滤器 -->
	<bean id="defaultFilter" class="com.cninsure.system.security.SecurityDefaultInterceptor">
		<constructor-arg name="loginPath" value="/auth/sign" />
		<!--过期时间30分钟 -->
		<property name="failureTime" value="1800000" />
		<property name="accessDecisionManager" ref="accessDecisionManager" />
		<property name="securityMetadataSource" ref="securityMetadataSource" />
	</bean>
	<bean class="com.cninsure.system.security.SecurityAccessDecisionManager"
		id="accessDecisionManager" />

	<bean id="inscResourceRoleService"
		class="com.cninsure.system.service.impl.INSCResourceRoleServiceImpl" />
	<bean class="com.cninsure.system.security.SecurityMetadataSource"
		id="securityMetadataSource">
		<constructor-arg name="inscResourceRoleService" ref="inscResourceRoleService"></constructor-arg>
	</bean>

</beans>
