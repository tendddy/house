	}
	@Override
	public PMLogRecords getLogRecordsInfoByPaymentIDandProductID(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne(this.getSqlName("getLogRecordsInfoByPaymentIDandProductID"), map);
