	@Override
	public int deleteByLogicId(long appId, String userId,long payplatformId,String  cardNo) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("appId", appId);
		param.put("userId", userId);
		param.put("cardNo", cardNo);
		param.put("payplatformId", payplatformId);
		return this.sqlSessionTemplate.delete(this.getSqlName("deleteByLogicId"), param);
	}

	@Override
	public int selectCountByProtocolid(String protocolid) {
		return this.sqlSessionTemplate.selectOne(this.getSqlName("selectCountByProtocolid"), protocolid);
	}

	@Override
	public List<Map<Object, Object>> selectBindCardList(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList(this.getSqlName("selectBindCardList"), map);
	}

	@Override
	public long getBindCardListCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne(this.getSqlName("getBindCardListCount"), map);
	}

	@Override
	public List<PMLogRecords> getLogRecordsInfo(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList(this.getSqlName("getLogRecordsInfo"), map);
	}

	@Override
	public PMLogRecords getLogRecordsInfoByPaymentID(Map<String, Object> map) {
