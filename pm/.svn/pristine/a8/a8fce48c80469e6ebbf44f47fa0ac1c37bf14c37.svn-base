package com.cninsure.payment.dao.impl;

import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.cninsure.core.dao.impl.BaseDaoImpl;
import com.cninsure.payment.dao.PMAppplatformDao;
import com.cninsure.payment.entity.PMAppplatform;

@Repository
public class PMAppplatformDaoImpl extends BaseDaoImpl<PMAppplatform,Long> implements
		PMAppplatformDao {

	@Override
	public long getConfigListCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne("PMAppplatform_getConfigListCount",map);
	}

	@Override
	public List<Map<Object, Object>> selectConfigList(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList("PMAppplatform_selectConfigList", map);
	}

	@Override
	public int saveplatform(PMAppplatform pmappplatform) {
		return this.sqlSessionTemplate.insert("PMAppplatform_saveplatform", pmappplatform);
	}

	@Override
	public int updateplatformeName(PMAppplatform pmappplatform) {
		return this.sqlSessionTemplate.update("PMAppplatform_updatePlatformName", pmappplatform);
	}

	@Override
	public int updateplatform(PMAppplatform pmappplatform) {
		return this.sqlSessionTemplate.update("PMAppplatform_updatePlatform", pmappplatform);
	}

	@Override
	public PMAppplatform getplatformList(String id) {
		return this.sqlSessionTemplate.selectOne("PMAppplatform_getplatformList",id);
	}


}