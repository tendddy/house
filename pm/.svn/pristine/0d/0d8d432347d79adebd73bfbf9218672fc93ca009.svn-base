	@Override
	public int saveSettleAttach(PMSettleAttach pmSettleAttach) {
		sqlSessionTemplate.insert("PMSettleAttach_saveSettleAttach",pmSettleAttach);
		return 0;
	}

	@Override
	public List<Map<Object, Object>> assemblySettleAttachDIV(Long id) {
		return sqlSessionTemplate.selectList("PMSettleAttach_assemblySettleAttachDIV",id);
	}

