		return sqlSessionTemplate.delete("PMSettleAttach_deleteAttach",id);
	}

	@Override
	public PMSettleAttach selectSetteAttach(Long id) {
		return sqlSessionTemplate.selectOne("PMSettleAttach_selectSetteAttach",id);
