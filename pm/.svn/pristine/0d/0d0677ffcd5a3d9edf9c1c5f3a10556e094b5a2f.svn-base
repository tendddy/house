package com.cninsure.payment.dao.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.cninsure.core.dao.impl.BaseDaoImpl;
import com.cninsure.payment.dao.PMSettlementDao;
import com.cninsure.payment.entity.PMPayment;
import com.cninsure.payment.entity.PMProducts;
import com.cninsure.payment.entity.PMSettlement;
import com.cninsure.payment.model.CashierModel;
import com.cninsure.system.entity.INSCUser;

@Repository
public class PMSettlementDaoImpl extends BaseDaoImpl<PMSettlement,Long> implements PMSettlementDao {

	@Override
	public long getSettlementListCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne("PMSettlement_getSettlementListCount", map);
	}

	@Override
	public List<Map<Object, Object>> selectSettlementList(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList("PMSettlement_selectSettlementList", map);
	}

	@Override
	public String getSettlementInterval(PMPayment paymentMainModel) {
		return this.sqlSessionTemplate.selectOne("PMSettlement_getSettlementInterval", paymentMainModel);
	}

	@Override
	public int saveSettlement(PMSettlement settlement) {
		return this.sqlSessionTemplate.insert("PMSettlement_saveSettlement", settlement);
	}

	@Override
	public String getAppPlatformRate(PMPayment paymentMainModel) {
		return this.sqlSessionTemplate.selectOne("PMSettlement_getAppPlatformRate", paymentMainModel);
	}
	@Override
	public String getAppPlatformRate(PMProducts success) {
		return this.sqlSessionTemplate.selectOne("PMSettlement_getAppPlatformRateOfProduct", success);
	}

	@Override
	public String getAppReceivableRatefee(PMPayment paymentMainMode,String payType) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("id", paymentMainMode.getId());
		param.put("payType", payType);
		return this.sqlSessionTemplate.selectOne("PMSettlement_getAppReceivableRatefee", param);
	}

	@Override
	public List<Map<Object, Object>> selectSettlementDetailList(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList("PMSettlement_selectSettlementDetailList", map);
	}

	@Override
	public long getSettlementDetailListCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne("PMSettlement_getSettlementDetailListCount", map);
	}

	@Override
	public String getStatementStatus(String appid, String settleMonth) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("appid", appid);
		param.put("settleMonth", settleMonth);
		return this.sqlSessionTemplate.selectOne("PMSettlement_getStatementStatus", param);
	}

	@Override
	public long getSettlementListCount(CashierModel cashierModel) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("appid", cashierModel.getAppid());
		param.put("settleMonth", cashierModel.getSettleMonth());
		return this.sqlSessionTemplate.selectOne("PMSettlement_getSettlementCount", param);
	}

	@Override
	public int updateStatusBySettleDate(String lastDay,long appid,INSCUser loginUser) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("appid", appid);
		param.put("settleMonth", lastDay);
		param.put("loginUser", loginUser.getName());
		return this.sqlSessionTemplate.insert("PMSettlement_updateStatusBySettleDate", param);
	}

	@Override
	public String getAppReceivableRatefee(List<PMProducts> pmProducts, String payType) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("pmProducts", pmProducts);
		param.put("payType", payType);
		return this.sqlSessionTemplate.selectOne("PMSettlement_getAppReceivableRatefee1", param);
	}


}