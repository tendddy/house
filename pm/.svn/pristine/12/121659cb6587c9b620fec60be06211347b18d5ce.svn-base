	@Override
	public int updateLogStatusById(Long id) {
		Map<String, Object> map = new HashMap<String, Object>();
		map.put("id", id);
		return sqlSessionTemplate.update("PMLogRecords_updateLogStatusById",map);
	}

	@Override
	public int insertLogRecords(PMLogRecords pmLogRecords) {
		sqlSessionTemplate.insert("PMLogRecords_insertLogRecords",pmLogRecords);
		return 0;
	}

	@Override
	public int updateLogRecordsOfResponse(PMLogRecords pmLogRecords) {
		Map<String, Object> map = new HashMap<String, Object>();
		map.put("id", pmLogRecords.getId());
		map.put("remark", pmLogRecords.getRemark());
		map.put("responseParams", pmLogRecords.getResponseParams());
		return sqlSessionTemplate.update("PMLogRecords_updateLogRecordsOfResponse",map);
	}



