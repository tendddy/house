package com.cninsure.payment.enumm;

/**
 * 支付状态 0-待支付，1-支付中，2-支付成功，3-支付失败，4-支付取消
 * 
 * @author tongchang
 *
 */
public enum PaymentStatusEnum {

	waiting("0", "待支付"), paying("1", "支付中"), success("2", "支付成功"), fail("3", "支付失败"), cancled("4", "支付取消"), refund_received("5",
			"退款已受理"), refund_success("6", "退款成功"), refund_fail("7", "退款失败");

	PaymentStatusEnum(String value, String name) {
		this.value = value;
		this.name = name;
	}

	private final String value;
	private final String name;

	public String getValue() {
		return value;
	}

	public String getName() {
		return name;
	}

	public static PaymentStatusEnum getEnum(String value) {

		for (PaymentStatusEnum e : values()) {
			if (e.getValue().equals(value))
				return e;
		}
		throw new IllegalArgumentException("No such Enum ! value : " + value);
	}

}
