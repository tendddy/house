package com.cninsure.payment.dao.impl;

import java.util.HashMap;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.cninsure.core.dao.impl.BaseDaoImpl;
import com.cninsure.payment.dao.PMRatefeeDao;
import com.cninsure.payment.entity.PMRatefee;

@Repository
public class PMRatefeeDaoImpl extends BaseDaoImpl<PMRatefee,Long> implements
		PMRatefeeDao {

	@Override
	public int updateByPayMentId(PMRatefee rateFeeModel) {
		return this.sqlSessionTemplate.update(this.getSqlName("updateByPayMentId"), rateFeeModel);
	}

	@Override
	public PMRatefee selectByPaymentId(long paymentId,String payType) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("paymentId", paymentId);
		param.put("payType", payType);
		return this.sqlSessionTemplate.selectOne(this.getSqlName("selectByPaymentId"), param);
	}

	@Override
	public int updateSelectiveById(PMRatefee rateFeeModel) {
		return this.sqlSessionTemplate.update(this.getSqlName("updateSelectiveById"), rateFeeModel);
	}

}