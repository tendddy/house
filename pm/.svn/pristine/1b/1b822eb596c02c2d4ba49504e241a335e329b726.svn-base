package com.cninsure.payment.dao.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.cninsure.core.dao.impl.BaseDaoImpl;
import com.cninsure.payment.dao.PMPaymentplatformDao;
import com.cninsure.payment.entity.PMPaymentplatform;

@Repository
public class PMPaymentplatformDaoImpl extends BaseDaoImpl<PMPaymentplatform,Long> implements
		PMPaymentplatformDao {
	@Override
	public long getConfigListCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne("PMPaymentplatform_getConfigListCount",map);
	}

	@Override
	public List<Map<Object, Object>> selectConfigList(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList("PMPaymentplatform_selectConfigList", map);
	}

	@Override
	public int saveProtocol(PMPaymentplatform pmpaymentplatform) {
		this.sqlSessionTemplate.insert("PMPaymentplatform_saveProtocol", pmpaymentplatform);
		return 0;
	}

	@Override
	public int updateProtocolName(PMPaymentplatform pmpaymentplatform) {
		return this.sqlSessionTemplate.update("PMPaymentplatform_updateProtocolName", pmpaymentplatform);
	}

	@Override
	public int updateProtocol(PMPaymentplatform pmpaymentplatform) {
		return this.sqlSessionTemplate.update("PMPaymentplatform_updateProtocol", pmpaymentplatform);
	}

	@Override
	public PMPaymentplatform getProtocolList(String id) {
		return this.sqlSessionTemplate.selectOne("PMPaymentplatform_getProtocolList",id);
	}

	@Override
	public String getBankCodeByName(String platformName, String bankcode) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("platformName", platformName);
		param.put("bankcode", bankcode);
		return this.sqlSessionTemplate.selectOne("PMPaymentplatform_getBankCodeByName",param);
	}

}