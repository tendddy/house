package com.cninsure.payment.dao.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.cninsure.core.dao.impl.BaseDaoImpl;
import com.cninsure.payment.dao.PMApprateDao;
import com.cninsure.payment.entity.PMApprate;

@Repository
public class PMApprateDaoImpl extends BaseDaoImpl<PMApprate,Long> implements
		PMApprateDao {
	
	@Override
	public int saveRate(PMApprate pmapptrate) {
		this.sqlSessionTemplate.insert("PMApprate_saveRate", pmapptrate);
		return 0;
	}
	
	@Override
	public int updateRate(PMApprate pmapptrate) {
		this.sqlSessionTemplate.insert("PMApprate_back_rate",pmapptrate);//备份
		return this.sqlSessionTemplate.update("PMApprate_updateRate", pmapptrate);
	}
	
	@Override
	public int deleteRate(PMApprate pmapptrate) {
		this.sqlSessionTemplate.insert("PMApprate_back_rate",pmapptrate);//备份
		return this.sqlSessionTemplate.delete("PMApprate_deleteRate", pmapptrate);
	}
	
	@Override
	public PMApprate selectRate(PMApprate pmapptrate) {
		return this.sqlSessionTemplate.selectOne("PMApprate_selectRate", pmapptrate);
	}

	@Override
	public List<Map<String, Object>> selectRateList(String id) {
		return this.sqlSessionTemplate.selectList("PMApprate_selectRateList", id);
	}

	@Override
	public long getRateTrackCount(Map<String, Object> map) {
		return this.sqlSessionTemplate.selectOne("PMApprate_getRateTrackCount", map);
	}

	@Override
	public List<Map<Object, Object>> selectRateTrackList(
			Map<String, Object> map) {
		return this.sqlSessionTemplate.selectList("PMApprate_selectRateTrackList", map);
	}

	@Override
	public PMApprate selectRateByOrderFee(long appId, int orderFee) {
		Map<String,Object> parameter = new HashMap<String, Object>();
		parameter.put("appId", appId);
		parameter.put("orderFee", orderFee);
		
		return this.sqlSessionTemplate.selectOne(this.getSqlName("selectRateByOrderFee"), parameter);
	}
	
}