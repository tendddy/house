	////平台列表查看	
	@RequestMapping(value = "initprotocollist", method = RequestMethod.GET)
	@ResponseBody
	public Map<String,Object> initProtocolList(//@RequestParam(required = false) String startdate,@RequestParam(required = false) String enddate,
			@ModelAttribute PagingParams para,@ModelAttribute PMPaymentplatform pmpaymentplatform)
					throws ControllerException {
		if(pmpaymentplatform!=null){
			if(pmpaymentplatform.getPlatformName()!=null&&pmpaymentplatform.getPlatformName().equals("")){
				pmpaymentplatform.setPlatformName(null);
			}
			if(pmpaymentplatform.getPlatformNo()!=null&&pmpaymentplatform.getPlatformNo().equals("")){
				pmpaymentplatform.setPlatformNo(null);
			}
		}
		Map<String, Object> map = BeanUtils.toMap(pmpaymentplatform,para);
		return PMPaymentplatformservice.initProtocolList(map);
	}
	
