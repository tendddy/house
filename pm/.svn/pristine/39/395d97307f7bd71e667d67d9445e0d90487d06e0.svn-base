	//保存费率信息
	@RequestMapping(value = "saverate", method = RequestMethod.POST)
	@ResponseBody
	public Map<String,Object> saveRateInfo(HttpSession session,@ModelAttribute PagingParams para,@ModelAttribute PMPaymentrate pmpaymentrate)
				throws ControllerException {
		INSCUser loginUser = (INSCUser) session.getAttribute("insc_user");
		pmpaymentrate.setModifyUser(loginUser.getUsercode());
		return PMPaymentrateservice.saveOrUpdateRateInfo(pmpaymentrate);
	}
	
