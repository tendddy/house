package com.cninsure.payment.util;

import java.io.IOException;
import java.util.Map;
import java.util.ResourceBundle;

import com.common.httpClient.HttpConnectionManager;

/**
 *外部接口调用
 */
public class PMHttpClientUtil {

	private static String APPURL = "";

	static {
		
		// 读取相关的配置
		ResourceBundle resourceBundle = ResourceBundle.getBundle("config/config");
		APPURL = resourceBundle.getString("biz.url");
	}

	/**
	 * 回调应用平台补全用户数据
	 * @param parmaMap
	 */
	public static void callBackAppPlatformHttpClient(Map<String,String> parmaMap){
		String path = "http://demo.shang-lian.com/"+"Query.html";
		HttpConnectionManager hph = HttpConnectionManager.getInstance();
		hph.postExecute(path,parmaMap);
	}


	public static void main(String[] args) throws Exception, IOException {
	}
}
